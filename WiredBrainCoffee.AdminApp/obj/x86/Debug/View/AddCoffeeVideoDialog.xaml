<ContentDialog x:ConnectionId='1'
    x:Class="WiredBrainCoffee.AdminApp.View.AddCoffeeVideoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add coffee video"
    PrimaryButtonText="Add video"
    SecondaryButtonText="Cancel"
                                                                                                                                             >
    <Grid Width="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:ConnectionId='2' Margin="0 0 0 10" VerticalAlignment="Bottom"
                    Content="Select video..."                                            />
        <TextBox x:ConnectionId='3' Grid.Row="1" Header="Blob name (sample: 2018/10/01/programmingvideo)"                                                                                                   />
        <TextBlock Grid.Row="1" Grid.Column="1" Text=".mp4" VerticalAlignment="Bottom"/>
    </Grid>
</ContentDialog>


